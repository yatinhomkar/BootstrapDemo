@model BootstrapDemo.Models.User

@{
    ViewBag.Title = "Login";
}

<div id="divLogin" style="margin-top:25px;">
    @using (Html.BeginForm("Authorize", "Login", FormMethod.Post))
    {
        <h5>Login Here</h5>
        <br />
        <div class="container">
            <div class="row">
                <div class="col-sm-2">
                    <div class="form-group">
                        @Html.LabelFor(model => model.UserEmail,
                                            new { @class = "control-label" }
                                           )
                    </div>


                </div>
                <div class="col-sm-6">
                    <div class="input-group">
                        @Html.TextBoxFor(model => model.UserEmail,
                                               new { @class = "form-control", @placeholder = "Enter Email" }
                                             )
                    </div>
                </div>
                <div class="class-sm-2">
                    <div class="form-group">
                        @Html.ValidationMessageFor(model => model.UserEmail, "", new { @style = "color:red" })
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-2">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Password,
                                     new { @class = "control-label" }
                                    )
                    </div>


                </div>
                <div class="col-sm-6">
                    <div class="input-group">
                        @Html.TextBoxFor(model => model.Password,
                                        new { @class = "form-control", @placeholder = "Enter Password", @type = "password" }
                                      )
                    </div>
                </div>
                <div class="class-sm-2">
                    <div class="form-group">
                        @Html.ValidationMessageFor(model => model.Password,"", new { @style = "color:red" })
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-2">

                </div>
                <div class="col-sm-6">
                    <input type="submit" value="Login" id="btnLogin" class="btn btn-outline-primary" />&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    <input type="reset" value="Reset" id="btnReset" class="btn btn-outline-primary" />
                </div>
            </div>

            <div class="row">
                <div class="col-sm-2">

                </div>
                <div class="col-sm-6">
                    <br />
                    <label style="color:red;" id="lblErrorMessage">@Html.DisplayFor(model => model.LoginErrorMessage)</label>
                </div>
                
            </div>

            </div>

    }

</div>

<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

<script>
    $("#btnReset").click(function () {
        debugger;
        $("#UserEmail").val("");
        $("#Password").val("");
        $("#lblErrorMessage").hide();
        window.location.href='@Url.Action("Index", "Login")';
    });
</script>